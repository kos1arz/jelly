{% extends 'base.html.twig' %}

{% block title %}Client list{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>


<div class="container-xl">
    <div>

        {% if app.user %}
            <a href="/logout" class="btn btn-success mt-3">Logout</a>
        {% else %}
            <a href="/login" class="btn btn-success mt-3">Login</a>
        {% endif %}    
        
    </div>
	<div class="table-responsive">
		<div class="table-wrapper">
			<div class="table-title">
				<div class="row">
					<div class="col-sm-6">
						<h2>Client <b>list</b></h2>
					</div>
					<div class="col-sm-6">
						<a href="/creat" class="btn btn-success"><i class="material-icons">&#xE147;</i> <span>Add New Client</span></a>						   
                    </div>
				</div>
			</div>
			<table class="table table-striped table-hover">
				<thead>
					<tr>
						<th>
							<span class="custom-checkbox">
								<input type="checkbox" id="selectAll">
								<label for="selectAll"></label>
							</span>
						</th>
						<th>Name</th>
						<th>Surname</th>
						<th>Email</th>
						<th>Phone</th>
						<th>Client type</th>
                        {% if app.user %}
						<th>Actions</th>
                        {% endif %}
					</tr>
				</thead>
				<tbody>
                {% for cilient in cilients %}
					<tr>
						<td>
							<span class="custom-checkbox">
								<input type="checkbox" id="checkbox1" name="options[]" value="1">
								<label for="checkbox1"></label>
							</span>
						</td>
						<td>{{ cilient.name }}</td>
						<td>{{ cilient.surname }}</td>
						<td>{{ cilient.email }}</td>
						<td>{{ cilient.phone }}</td>
						<td>{{ cilient.clientType.name }}</td>
                        {% if app.user %}
						<td>
							<a href="/edit/{{ cilient.id }}" class="edit"><i class="material-icons" data-toggle="tooltip" title="Edit">&#xE254;</i></a>
							<a href="/delete/{{ cilient.id }}" class="delete"><i class="material-icons" data-toggle="tooltip" title="Delete">&#xE872;</i></a>
						</td>
                        {% endif %}
					</tr>
                {% endfor %}
				</tbody>
			</table>
		</div>
	</div>        
</div>

{% endblock %}
